@model WebApp_FullProject.Models.PageSettings
@{
    ViewBag.Title = "Create";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Create</title>
</head>
<body>
    <form class="user" method="post" enctype="multipart/form-data">
        <div class="form-group">
            @Html.LabelFor(m => m.Logo)
            @Html.TextBoxFor(m => m.Logo, new { @class = "form-control form-control-user"})
            @Html.ValidationMessageFor(m => m.Logo, null, new { @class = "text-danger" })
        </div>
        <div class="form-group">
            @Html.LabelFor(m => m.ImageFile)
            @Html.TextBoxFor(m => m.ImageFile, new { @class = "form-control form-control-user", @type = "file" })
            @Html.ValidationMessageFor(m => m.ImageFile, null, new { @class = "text-danger" })
        </div>
        <div class="form-group">
            @Html.LabelFor(m => m.Title)
            @Html.TextBoxFor(m => m.Title, null, new { @class = "form-control form-control-user" })
            @Html.ValidationMessageFor(m => m.Title, null, new { @class = "text-danger" })
        </div>
        <div class="form-group">
            @Html.LabelFor(m => m.Subtitle)
            @Html.TextBoxFor(m => m.Subtitle, null, new { @class = "form-control form-control-user" })
            @Html.ValidationMessageFor(m => m.Subtitle, null, new { @class = "text-danger" })
        </div>
        <div class="form-group">
            @Html.LabelFor(m => m.Copyright)
            @Html.TextBoxFor(m => m.Copyright, null, new { @class = "form-control form-control-user" })
            @Html.ValidationMessageFor(m => m.Copyright, null, new { @class = "text-danger" })
        </div>
        <button class="btn btn-primary btn-user btn-block">Create</button>
    </form>
</body>
</html>
